<p id="notice"><%= notice %></p>

<h1>Strategies</h1>

<table>
  <thead>
    <tr>
      <th><%= link_to 'Title', :sort => 'title' %></th>
      <th><%= link_to 'Description', :sort => 'description' %></th>
      <th><%= link_to 'Agent', :sort => 'agent' %></th>
      <th><%= link_to 'Map', :sort => 'map' %></th></th>
      <th><%= link_to 'Side', :sort => 'side' %></th></th>
      <th><%= link_to 'Difficulty', :sort => 'difficulty' %></th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @strategies.each do |strategy| %>
      <tr>
        <td><%= strategy.title %></td>
        <td><%= strategy.description %></td>
        <td><%= strategy.agent %></td>
        <td><%= strategy.map %></td>
        <td><%= strategy.side %></td>
        <td><%= strategy.difficulty %></td>
        <td><%= link_to 'Show', strategy %></td>

        <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_strategy_path(strategy) %></td>
          <td><%= link_to 'Destroy', strategy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %> 
      </tr>
    <% end %>
  </tbody>
</table>

<br>

